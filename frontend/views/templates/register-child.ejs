<form class="form-register">
    <div class="h3 mb-4 page-title">Реєстрація дитини</div>
    <div class="form-group">
        <label>ПІБ</label>
        <div class="row">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Прізвище" name="last_name" required>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Ім'я" name="first_name" required>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="По батькові" name="father_name">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="inputDob">Дата нарождення</label>
        <input type="text" class="form-control" id="inputDob" name="dob" placeholder="05.04.2000" required>
    </div>
    <div class="form-group">
        <label>
            Опікун
            <select class="form-control" name="parent">
                <% parents.forEach(function (parent) { %>
                <option value=""><%=parent.guardian_last_name%> <%=parent.guardian_first_name%></option>
                <% }); %>
            </select>
        </label>
    </div>
    <div class="form-group">
        <label>Групи</label>
        <% groups.forEach(function (group) { %>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="group">
                <label class="form-check-label">Група "<%=group.group_name%>"</label>
            </div>
        <% }); %>
    </div>

    <button class="btn btn-primary btn-block mt-4" type="submit">Зареєструвати</button>
</form>